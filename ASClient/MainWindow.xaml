<Window x:Class="ASClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASClient"
        mc:Ignorable="d"
        Title="Attendance System Utility" Height="720" Width="1000"
        MinHeight="350" MinWidth="650"
        WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="415"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!--Students Table-->
        <DataGrid x:Name="StudentsList" Margin="8" AutoGenerateColumns="False" Loaded="StudentsList_Loaded" IsReadOnly="True" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="Id" Width="10"/>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Имя" Width="100"/>
                <DataGridTextColumn Binding="{Binding Path=RfidTag}" Header="RFID метка" Width="100"/>
                <DataGridTextColumn Binding="{Binding Path=Attendance}" Header="Посещаемость" Width="100"/>
                <DataGridTextColumn Binding="{Binding Path=AttendanceTime}" Header="Время прихода" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Reader Options-->
        <Label x:Name="RfidTag" 
               Content=" AA AA AA AA " 
               HorizontalAlignment="Left" Margin="33,14,0,0" VerticalAlignment="Top" 
               FontSize="22" Height="35"
               Grid.Row="1"/>
        <Button x:Name="ButtonConnectPort" 
                Content="Подключиться" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                FontSize="16" 
                Margin="0,14,14,0" 
                Click="ButtonConnectPort_Click" 
                Height="35"
                Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="ButtonUpdatePorts" Content="Обновить" 
                HorizontalAlignment="Right" Margin="0,14,144,0" VerticalAlignment="Top" 
                FontSize="16" Click="ButtonUpdatePorts_Click" 
                Height="35" Width="111"
                Grid.Row="1" Grid.Column="1"/>
        <ComboBox x:Name="PortsList" 
                  HorizontalAlignment="Right" Margin="0,15,280,0" VerticalAlignment="Top" 
                  Width="120" Height="35"
                  Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
